@model TestLab.Models.UserData

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCKTYPE html>
<html>
    <head>
        <style>
            h1 {
                text-align: center;
            }
        </style>
    </head>
    <body>
        <h1 class="display-4">Registration Form</h1>
        <form asp-action="RegistrationForm" method="post">
        <div>
                <label asp-for="Name"> Name</label>
                <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="Email"> Email</label>
            <input asp-for="Email" />   
        </div>
        <div>
            <label asp-for="Phone"> PhoneNumber</label>
            <input asp-for="Phone" />
        </div>
        <div>
            <label asp-for="Address"> Address</label>
            <input asp-for="Address" />
        </div>
        <button type="submit" class="btn btn-primary">Submit Data</button>
        </form>
    </body>
</html>
